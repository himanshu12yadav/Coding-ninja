    <div class="content__table">

        <table>
            <thead>
            <tr>
                <td>NAME</td>
                <td>DESCRIPTION</td>
                <td>AUTHOR</td>
                <td>LABELS</td>
            </tr>
            </thead>
            <tbody id="tbody">
        <% if (bugs.length !== 0){ %>
                <% for (let bug of bugs){ %>
                    <tr>
                        <td><%=  bug.title %></td>
                        <td><%= bug.description%></td>
                        <td><%= bug.author%></td>
                        <td>
                            <div class="tag-container">
                                <% for (let label of bug.label){ %>
                                <div class="tag">
                                    <span><%= label %></span>
                                </div>
                                <% } %> 
                            </div>
                        </td>
                    </tr>
        
                    <% } %>
                    </tbody>
                </table>
                <%  }else{ %>
                <h3>No issue reported</h3>
                <% } %>
                
    </div>
