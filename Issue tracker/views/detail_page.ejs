<section class="content">
        <form id="form" method="post" action="/issue_tracker/detail_page?search=<%= project_id %>" autocomplete="off">
            
            <div class="form__control">
                <label>Author</label>
                <input type="text" name="author">
            </div>
            <div class="form__control">
                <label>Title</label>
                <input type="text" name="title">
            </div>
            <div class="form__control">
                <label>Description</label>
                <input type="text" name="description">
            </div>
            <div class="form__select">
                <label>LABELS</label>
                <div id="list" class="list">
                    <input id="list__input" type="text" name="label">
                </div>
                <select id="select">
                    <option value="">Select Option</option>
                    <% for (let label of labels[0].label){ %>
                    <option><%= label %></option>
                     <% } %>
                </select>
            </div>
            <input id="submit__btn" type="submit" value="Search">

